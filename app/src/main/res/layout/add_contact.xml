<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/deepblue_background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:background="@mipmap/add_contact"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="姓名"
            android:layout_marginTop="30dp"
            android:id="@+id/contact_name" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_bdnumber"
        android:textColor="@color/white"
        android:textSize="@dimen/index_value_text_size"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="北斗号码"
        android:inputType="number"
        android:id="@+id/contact_bdnumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_pbnumber"
        android:textColor="@color/white"
        android:textSize="@dimen/index_value_text_size"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="手机号码"
        android:inputType="number"
        android:id="@+id/contact_pbnumber" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/confirm_btn" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/cancel_btn" />
    </LinearLayout>

</LinearLayout>